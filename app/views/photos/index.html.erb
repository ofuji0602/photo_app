<h1 class="text-3xl font-bold mb-6">写真一覧</h1>

<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
  <% @photos.each do |photo| %>
    <div class="border rounded-lg p-4 shadow-lg bg-white">
      <h2 class="text-xl font-semibold mb-2"><%= photo.title %></h2>
      <% if photo.image.attached? %>
        <%= image_tag photo.image, class: "w-64 h-auto rounded-lg shadow-md" %>
      <% else %>
        <p class="text-gray-500">画像はありません</p>
      <% end %>
    </div>
  <% end %>
</div>

<div class="mt-6">
  <%= link_to '戻る', root_path, class: "text-blue-500 hover:underline" %>
  <%= link_to '新しい写真を投稿する', new_photo_path, class: "ml-4 text-blue-500 hover:underline" %>
</div>

